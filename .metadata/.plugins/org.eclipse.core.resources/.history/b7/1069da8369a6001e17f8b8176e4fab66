/*-----------------------------------------------------Includes------------------------------------------------------*/
/*********************************************************************************************************************/
#include "registers.h"
#include "scr_header_files.h"
#include "SCR_Macros.h"
#include "SCR_TypesReg.h"
#include <string.h>
#include <stdlib.h>
#include <stdio.h>
#include <stdint.h>
/*********************************************************************************************************************/
/*------------------------------------------------------Macros-------------------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*-------------------------------------------------Global variables--------------------------------------------------*/
/*********************************************************************************************************************/
unsigned int Capture_Value_1 = 0;
unsigned int Capture_Value_2 = 0;
uint32_t  multiplication_16bit_by_8bit_Result;
unsigned int Capture_Value_sum;
unsigned int duty_cycle = 0;
/*********************************************************************************************************************/
/*--------------------------------------------Private Variables/Constants--------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*------------------------------------------------Function Prototypes------------------------------------------------*/
/*********************************************************************************************************************/
void add_two_16_bit_unint(void);
void multiply_16bit_by_8bit(void);
void Measure_PWM_duty_cycle(void);

/*********************************************************************************************************************/
/*---------------------------------------------Function Implementations----------------------------------------------*/
/*********************************************************************************************************************/
void Duty_Cycle_Calculator_Function(void)
{
    __xdata __at(0x1F00)  unsigned int Data ;
    Capture_Value_1 = 0x0FFF;
    Capture_Value_2 = 0x0FFF;
    add_two_16_bit_unint();
    multiply_16bit_by_8bit();
    if( multiplication_16bit_by_8bit_Result > 409000)
    {
        SCR_P00_OUT  ^= (1 << 7) ;
        delay();
    }
    Data =  multiplication_16bit_by_8bit_Result;
delay();
//Data = ( multiplication_16bit_by_8bit_Result >> 16);
        delay();
   // Measure_PWM_duty_cycle();

}
/***********************************************************************************************************/
  void add_two_16_bit_unint(void)
  {
      unsigned int a = Capture_Value_1;
      unsigned int b = Capture_Value_2;
      uint8_t carry = 0;
      uint16_t result = 0;
      for (int i = 0; i < 16; ++i) {
              uint8_t bitA = (a >> i) & 0x01;
              uint8_t bitB = (b >> i) & 0x01;
              // Calculate the sum bit
              uint8_t sumBit = bitA ^ bitB ^ carry;
              // Update the carry for the next iteration
              carry = (bitA & bitB) | ((bitA ^ bitB) & carry);
              // Update the result
              result |= (sumBit << i);
          }
      Capture_Value_sum = result;
  }

/**********************************************************************************************************/
void multiply_16bit_by_8bit(void)
{
    unsigned int a = Capture_Value_1;
    uint8_t b = 100;
    uint32_t result = 0;
    uint8_t carry = 0;
    for (int i = 0; i < 8; ++i)
    {
            // If the least significant bit of b is 1, add a to the result
            if (b & 1) {
                result += a;
                // Check for overflow and add the carry
                if (result < a ) {
                    // Overflow occurred, handle carry
                    carry++;
                }
                if(result < carry)
                {
                    carry++;
                }
            }
            // Shift a to the left and b to the right
            a <<= 1;
            b >>= 1;
            // If there is a carry from the previous addition, add it to 'a'
            a += carry;
            // Update carry for the next iteration
            carry = 0;
        }
        multiplication_16bit_by_8bit_Result = result ;
      //  multiplication_16bit_by_8bit_Result = result & 0xFFFF;// Mask to keep only the 16 least significant bits
}
/****************************************************************************************************************************************
 * *************************************************************************************************************************************/
void Measure_PWM_duty_cycle(void)
{
    uint32_t dividend = multiplication_16bit_by_8bit_Result;
    uint16_t divisor = Capture_Value_sum;
    uint32_t quotient = 0;
    uint32_t remainder = 0;
        for (int bit = 31; bit >= 0; bit--) {
            remainder <<= 1;
            remainder |= (dividend >> bit) & 0x01;
            if (remainder >= divisor) {
                remainder -= divisor;
                quotient |= (1UL << bit);
            }
        }

        duty_cycle = quotient;
}
