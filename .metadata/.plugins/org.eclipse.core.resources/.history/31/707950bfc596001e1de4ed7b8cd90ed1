void SCR_IR_Select_External_Interrupt_Line(void)
{
    // Select External Interrupt Line,  SCU_PAGE=2
    SCR_SCU_PAGE = 2;
    SCR_MODPISEL2 = (unsigned char)(SCR_MODPISEL2 & ~(0x03 << 0)) | (0x02 );
    SCR_MODPISEL2 = (unsigned char)(SCR_MODPISEL2 & ~(0x03 << 2)) | (0x0C );
    SCR_MODPISEL2 = (unsigned char)(SCR_MODPISEL2 & ~(0x03 << 4)) | (0x30 );
    SCR_MODPISEL2 = (unsigned char)(SCR_MODPISEL2 & ~(0x03 << 6)) | (0xC0 );

}

void SCR_IR_Select_Edge_Mode(void)
{
    // select Edge Mode  ,  SCU_PAGE=1
    SCR_SCU_PAGE = 1;
    // Node 9 -> EXICON1.EXINT5 == 01  for Falling edge bit position  2 - 3
    SCR_IR_EXICON0  = (unsigned char)(SCR_IR_EXICON0 & ~(SCR_EXICONX_MSK << EXINT5_BITS_POSITION)) | (EXINT5_CONFIG_VALUE);//0000 0000
  //  SCR_IR_EXICON0  = (unsigned char)(SCR_IR_EXICON0 & 0xF3);
    // select edge mode for node 8 rising edge
    SCR_IR_EXICON0  = (unsigned char)(SCR_IR_EXICON0 & ~(SCR_EXICONX_MSK << EXINT2_BITS_POSITION)) | (EXINT1_CONFIG_VALUE);
   //EXICON0.EXINT2  == 01 for Riseing edge  bit position 6 - 7   00000000

//// Disable the following external interrupt in to node 9
//    SCR_IR_EXICON1  = (unsigned char)(SCR_IR_EXICON1 & ~(SCR_EXICONX_MSK << EXINT5_BITS_POSITION)) | (EXINT5_CONFIG_VALUE);
//    SCR_IR_EXICON1  = (unsigned char)(SCR_IR_EXICON1 & ~(SCR_EXICONX_MSK << EXINT6_BITS_POSITION)) | (EXINT6_CONFIG_VALUE);
//    SCR_IR_EXICON0  = (unsigned char)(SCR_IR_EXICON0 & ~(SCR_EXICONX_MSK << EXINT3_BITS_POSITION)) | (EXINT3_CONFIG_VALUE);


}

void SCR_IR_Enable_Interrupt_Node(void)
{
// PAGE: X
    SCR_IEN1 |= (1 << SET_BIT_3_IN_IEN1) ;//node 9 enable IEN1.EX2  Bit posiotion 2
    SCR_IEN1 |= (1 << 3) ; // Set bit 3
}








